@model List<Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Deneyimler</h4>
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Deneyimlerin Listesi</div>
                        </div>
                        <div class="card-body">


                            <div class="card-sub">
                                Deneyimler ile ilgili değişikleri bu panelde yapabilirsiniz.
                            </div>

                        <table class="table table-bordered">
                                <thead>

                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Unvan</th>
                                        <th scope="col">Şirket</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ExperienceId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Head</td>
                                            <td>@item.Date</td>
                                            <td><a href="/ExperienceAdmin/DeleteExperience/@item.ExperienceId" class="btn btn-danger">SİL</a></td>
                                            <td><a href="/ExperienceAdmin/UpdateExperience/@item.ExperienceId" class="btn btn-succes">GÜNCELLE</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        <td><a href="/ExperienceAdmin/CreateExperience/" class="btn btn-primary">Yeni Deneyim Oluştur</a></td>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>



