@model Reference
@{
    ViewData["Title"] = "CreateReference";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referansların Listesi</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Referansın Adı ve Soyadı</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Çalıştığı Şirket</label>
                            <input type="text" asp-for="Company" class="form-control" />
                            <br />
                            <label>Mail Adresi</label>
                            <input type="text" asp-for="Mail" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Referansı Ekle</button>
                        </form>


                    </div>

                </div>

            </div>
        </div>
    </div>

