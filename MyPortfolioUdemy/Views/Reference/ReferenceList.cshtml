@model List<Reference>
@{
    ViewData["Title"] = "ReferenceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referansların Listesi</div>
                    </div>
                    <div class="card-body">


                        <div class="card-sub">
                            Referanslar ile ilgili değişikleri bu panelde yapabilirsiniz.
                        </div>

                        <table class="table table-bordered">
                            <thead>

                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Adı Soyadı</th>
                                    <th scope="col">Şirketi</th>
                                    <th scope="col">Mail Adresi<th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ReferenceId</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Company</td>
                                        <td>@item.Mail</td>
                                        <td><a href="/Reference/DeleteReference/@item.ReferenceId" class="btn btn-danger">SİL</a></td>
                                        <td><a href="/Reference/UpdateReference/@item.ReferenceId" class="btn btn-succes">GÜNCELLE</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/Reference/CreateReference/" class="btn btn-primary">Yeni Referans Oluştur</a></td>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
