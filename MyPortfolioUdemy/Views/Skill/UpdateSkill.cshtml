@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateSkill</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeteneklerimi GÜNCELLEME</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="SkillId" />
                            <label>Yetenek Adı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Oranı</label>
                            <input type="text" asp-for="Value" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Yeteneği Güncelle</button>
                        </form>

                    </div>

                </div>

            </div>
        </div>
    </div>
