@model List<Certificate>
@{
    ViewData["Title"] = "CertificateList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Sertifikalar</h4>
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sertifikaların Listesi</div>
                        </div>
                        <div class="card-body">


                            <div class="card-sub">
                                Sertifikalar ile ilgili değişikleri bu panelde yapabilirsiniz.
                            </div>

                        <table class="table table-bordered">
                                <thead>

                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Seritifika Adı</th>
                                        <th scope="col">Alınan Kurum</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CertificateId</td>
                                            <td>@item.Name</td>
                                            <td>@item.Organization</td>
                                            <td>@item.Date</td>
                                          
                                            <td><a href="/Certificate/DeleteCertificate/@item.CertificateId" class="btn btn-danger">SİL</a></td>
                                            <td><a href="/Certificate/UpdateCertificate/@item.CertificateId" class="btn btn-succes">GÜNCELLE</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        <td><a href="/Certificate/CreateCertificate/" class="btn btn-primary">Yeni Sertifika Oluştur</a></td>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>




